<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.localcalendarjavafx.CalendarController">
    <children>
        <TextField fx:id="eventTitleField" promptText="Enter event title" layoutX="14.0" layoutY="14.0" />
        <TextField fx:id="eventDateField" promptText="Enter event date (YYYY-MM-DD)" layoutX="14.0" layoutY="50.0" />
        <TextField fx:id="eventStartTimeField" promptText="Enter start time (HHMM)" layoutX="14.0" layoutY="86.0" />
        <TextField fx:id="eventEndTimeField" promptText="Enter end time (HHMM)" layoutX="14.0" layoutY="122.0" />
        <TextField fx:id="eventPriorityField" promptText="Enter priority" layoutX="14.0" layoutY="158.0" />
        <Button fx:id="saveButton" text="Save" onAction="#handleSaveButtonAction" layoutX="14.0" layoutY="200.0" />
        <ListView fx:id="eventListView" layoutX="14.0" layoutY="240.0" prefHeight="200.0" prefWidth="300.0" />
    </children>
</AnchorPane>