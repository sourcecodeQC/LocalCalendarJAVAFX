<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.localcalendarjavafx.CalendarController">
    <children>
        <Label text="Local Calendar" layoutX="14.0" layoutY="14.0" />
        <Button text="Add Event" layoutX="14.0" layoutY="50.0" onAction="#handleAddEvent" />
        <Button text="View Events" layoutX="100.0" layoutY="50.0" onAction="#handleViewEvents" />
        <TableView fx:id="eventTable" layoutX="14.0" layoutY="100.0" prefWidth="400.0" prefHeight="300.0">
            <columns>
                <TableColumn text="Title" />
                <TableColumn text="Date" />
                <TableColumn text="Start Time" />
                <TableColumn text="End Time" />
                <TableColumn text="Priority" />
            </columns>
        </TableView>
    </children>
</AnchorPane>